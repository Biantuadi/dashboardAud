<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Les Audacieuses - Dashboard</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body class="dashboard-layout">    <header class="main-header">        <div class="header-left">
            <div class="logo-container">
                <div class="logo-text">Les Audacieuses Académie</div>
                <div class="logo" style="cursor: pointer;">
                    <img src="/images/logo.svg" alt="Les Audacieuses Logo">
                </div>
            </div>
        </div>
        <div class="header-right">
            <div class="user-profile">
                <span class="user-name"><%= locals.userName || 'Admin' %></span>
                <a href="/logout" class="logout-btn">Déconnexion</a>
            </div>
        </div>
    </header>

    <div class="content-wrapper">
        <aside class="sidebar">
            <nav class="main-nav">
                <ul>
                    <li class="<%= locals.active === 'dashboard' ? 'active' : '' %>">
                        <a href="/dashboard">
                            <img src="/images/home.svg" alt="Accueil">
                            <span>Accueil</span>
                        </a>
                    </li>
                    <li class="<%= locals.active === 'modules' ? 'active' : '' %>">
                        <a href="/modules">
                            <img src="/images/book.svg" alt="Modules">
                            <span>Modules</span>
                        </a>
                    </li>
                    <li class="<%= locals.active === 'patients' ? 'active' : '' %>">
                        <a href="/patients">
                            <img src="/images/person.svg" alt="Patientes">
                            <span>Patientes</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </aside>

        <main class="main-content">
            <%- body %>
        </main>
    </div>

    <!-- Popup de validation -->
    <div id="validation-popup" class="popup-container" style="display: none;">
        <div class="popup-content">
            <h3 id="popup-title">Confirmation</h3>
            <p id="popup-message">Êtes-vous sûr de vouloir effectuer cette action ?</p>
            <div class="popup-buttons">
                <button id="popup-cancel" class="btn-secondary">Annuler</button>
                <button id="popup-confirm" class="btn-primary">Confirmer</button>
            </div>        </div>
    </div>
    
    <script src="/js/dashboard.js"></script>    <script>
        // Debug et gestion du logo
        document.addEventListener('DOMContentLoaded', function() {
            const logo = document.querySelector('.logo');
            if (logo) {
                console.log('Logo trouvé et événement ajouté');
                
                // Supprimer l'ancien onclick et utiliser addEventListener
                logo.removeAttribute('onclick');
                
                logo.addEventListener('click', function(e) {
                    e.preventDefault();
                    console.log('Logo cliqué! Redirection vers /dashboard');
                    window.location.href = '/dashboard';
                });
                
                // Style hover
                logo.style.cursor = 'pointer';
            } else {
                console.error('Logo non trouvé dans le DOM');
            }
        });
    </script>
    <%- locals.scripts || '' %>
</body>
</html>