<%- include('layouts/header', { title: 'Dashboard', active: 'dashboard' }) %>

<div class="dashboard-home">
    <div class="dashboard-welcome">
        <h2>Bienvenue sur votre Dashboard</h2>
        <p class="dashboard-date">Date: <%= new Date().toLocaleDateString('fr-FR', { day: 'numeric', month: 'long', year: 'numeric' }) %></p>
    </div>

    <div class="dashboard-stats">
        <div class="stat-card">
            <div class="stat-icon">
                <img src="/images/person.svg" alt="Patientes">
            </div>
            <div class="stat-info">
                <h3>Patientes</h3>
                <p class="stat-count">25</p>
            </div>
        </div>
        <div class="stat-card">
            <div class="stat-icon">
                <img src="/images/book.svg" alt="Modules">
            </div>
            <div class="stat-info">
                <h3>Modules</h3>
                <p class="stat-count">12</p>
            </div>
        </div>
        <div class="stat-card">
            <div class="stat-icon">
                <img src="/images/date_range.svg" alt="Rendez-vous">
            </div>
            <div class="stat-info">
                <h3>Rendez-vous</h3>
                <p class="stat-count">8</p>
            </div>
        </div>
    </div>

    <div class="dashboard-recent">
        <div class="recent-section">
            <div class="section-header">
                <h3>Derniers modules</h3>
                <a href="/modules" class="view-all">Voir tout</a>
            </div>
            <div class="recent-items">
                <div class="module-item">
                    <div class="module-title">Confiance en soi</div>
                    <div class="module-date">Ajouté le 10/05/2025</div>
                </div>
                <div class="module-item">
                    <div class="module-title">Gestion du stress</div>
                    <div class="module-date">Ajouté le 08/05/2025</div>
                </div>
                <div class="module-item">
                    <div class="module-title">Préparation à l'entretien</div>
                    <div class="module-date">Ajouté le 02/05/2025</div>
                </div>
            </div>
        </div>
        
        <div class="recent-section">
            <div class="section-header">
                <h3>Dernières patientes</h3>
                <a href="/patients" class="view-all">Voir tout</a>
            </div>
            <div class="recent-items">
                <div class="patient-item">
                    <div class="patient-info">
                        <div class="patient-name">Sophie Martin</div>
                        <div class="patient-email">sophie.martin@email.com</div>
                    </div>
                    <div class="patient-date">Inscrite le 12/05/2025</div>
                </div>
                <div class="patient-item">
                    <div class="patient-info">
                        <div class="patient-name">Laura Dubois</div>
                        <div class="patient-email">laura.dubois@email.com</div>
                    </div>
                    <div class="patient-date">Inscrite le 05/05/2025</div>
                </div>
                <div class="patient-item">
                    <div class="patient-info">
                        <div class="patient-name">Julie Blanc</div>
                        <div class="patient-email">julie.blanc@email.com</div>
                    </div>
                    <div class="patient-date">Inscrite le 01/05/2025</div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('layouts/footer') %>