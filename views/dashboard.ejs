<%- include('layouts/header', { title: 'Dashboard', active: 'dashboard' }) %>

<div class="dashboard-home">
    <div class="dashboard-welcome">
        <h2>Bienvenue sur votre Dashboard</h2>
        <p class="dashboard-date">Date: <%= new Date().toLocaleDateString('fr-FR', { day: 'numeric', month: 'long', year: 'numeric' }) %></p>
    </div>

    <div class="dashboard-stats">
        <div class="stat-card">
            <div class="stat-icon">
                <img src="/images/person.svg" alt="Patientes">            </div>
            <div class="stat-info">
                <h3>Patientes</h3>
                <p class="stat-count"><%= stats.patientCount %></p>
            </div>
        </div>
        <div class="stat-card">
            <div class="stat-icon">
                <img src="/images/book.svg" alt="Modules">
            </div>
            <div class="stat-info">
                <h3>Modules</h3>
                <p class="stat-count"><%= stats.moduleCount %></p>
            </div>
        </div>
        <div class="stat-card">
            <div class="stat-icon">
                <img src="/images/date_range.svg" alt="Rendez-vous">
            </div>
            <div class="stat-info">
                <h3>Rendez-vous</h3>
                <p class="stat-count">8</p>
            </div>
        </div>
    </div>

    <div class="dashboard-recent">
        <div class="recent-section">
            <div class="section-header">
                <h3>Derniers modules</h3>
                <a href="/modules" class="view-all">Voir tout</a>
            </div>            <div class="recent-items">
                <% if (recentModules && recentModules.length > 0) { %>
                    <% recentModules.forEach(module => { %>
                        <div class="module-item">
                            <div class="module-title"><%= module.titre %></div>
                            <div class="module-date">Ajouté le <%= new Date(module.date_creation).toLocaleDateString('fr-FR') %></div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <div class="module-item">
                        <div class="module-title">Aucun module trouvé</div>
                    </div>
                <% } %>
            </div>
        </div>
        
        <div class="recent-section">
            <div class="section-header">
                <h3>Dernières patientes</h3>
                <a href="/patients" class="view-all">Voir tout</a>
            </div>            <div class="recent-items">
                <% if (recentPatients && recentPatients.length > 0) { %>
                    <% recentPatients.forEach(patient => { %>
                        <div class="patient-item">
                            <div class="patient-info">
                                <div class="patient-name"><%= patient.prenom %> <%= patient.nom %></div>
                                <div class="patient-email"><%= patient.email %></div>
                            </div>
                            <div class="patient-date">Inscrite le <%= new Date(patient.date_inscription).toLocaleDateString('fr-FR') %></div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <div class="patient-item">
                        <div class="patient-info">
                            <div class="patient-name">Aucune patiente trouvée</div>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</div>

<%- include('layouts/footer') %>